{
  "name": "ai-bookmarks",
  "displayName": "AI Bookmarks",
  "description": "AI-powered code bookmarks with MCP integration",
  "version": "0.1.0",
  "publisher": "linonon",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiBookmarksContainer",
          "title": "AI Bookmarks",
          "icon": "icons/bookmark.svg"
        }
      ]
    },
    "views": {
      "aiBookmarksContainer": [
        {
          "id": "aiBookmarks",
          "name": "Bookmarks",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "aiBookmarks.refresh",
        "title": "Refresh Bookmarks",
        "icon": "$(refresh)"
      },
      {
        "command": "aiBookmarks.jumpTo",
        "title": "Jump to Bookmark"
      },
      {
        "command": "aiBookmarks.delete",
        "title": "Delete Bookmark",
        "icon": "$(trash)"
      },
      {
        "command": "aiBookmarks.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "aiBookmarks.addManual",
        "title": "Add Bookmark Here"
      },
      {
        "command": "aiBookmarks.createGroup",
        "title": "New Group",
        "icon": "$(add)"
      },
      {
        "command": "aiBookmarks.exportMarkdown",
        "title": "Export Bookmarks as Markdown"
      },
      {
        "command": "aiBookmarks.search",
        "title": "Search Bookmarks",
        "icon": "$(search)"
      },
      {
        "command": "aiBookmarks.checkValidity",
        "title": "Check Bookmark Validity",
        "icon": "$(check-all)"
      },
      {
        "command": "aiBookmarks.editBookmark",
        "title": "Edit Bookmark",
        "icon": "$(edit)"
      },
      {
        "command": "aiBookmarks.nextBookmark",
        "title": "Go to Next Bookmark",
        "icon": "$(arrow-down)"
      },
      {
        "command": "aiBookmarks.prevBookmark",
        "title": "Go to Previous Bookmark",
        "icon": "$(arrow-up)"
      },
      {
        "command": "aiBookmarks.toggleViewMode",
        "title": "Toggle View Mode (Group/File)",
        "icon": "$(list-tree)"
      },
      {
        "command": "aiBookmarks.moveBookmarkUp",
        "title": "Move Bookmark Up",
        "icon": "$(arrow-up)"
      },
      {
        "command": "aiBookmarks.moveBookmarkDown",
        "title": "Move Bookmark Down",
        "icon": "$(arrow-down)"
      },
      {
        "command": "aiBookmarks.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "aiBookmarks.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "aiBookmarks.editGroup",
        "title": "Edit Group",
        "icon": "$(edit)"
      },
      {
        "command": "aiBookmarks.renameGroup",
        "title": "Rename Group",
        "icon": "$(rename)"
      },
      {
        "command": "aiBookmarks.moveBookmark",
        "title": "Move to Group...",
        "icon": "$(move)"
      },
      {
        "command": "aiBookmarks.addChildBookmark",
        "title": "Add Child Bookmark",
        "icon": "$(add)"
      },
      {
        "command": "aiBookmarks.copyBookmarkInfo",
        "title": "Copy Bookmark Info",
        "icon": "$(copy)"
      },
      {
        "command": "aiBookmarks.copyGroupInfo",
        "title": "Copy Group Info",
        "icon": "$(copy)"
      },
      {
        "command": "aiBookmarks.openBookmarkDetail",
        "title": "Open Bookmark Detail",
        "icon": "$(info)"
      },
      {
        "command": "aiBookmarks.collapseGroup",
        "title": "Collapse Group",
        "icon": "$(chevron-down)"
      },
      {
        "command": "aiBookmarks.expandGroup",
        "title": "Expand Group",
        "icon": "$(chevron-up)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiBookmarks.search",
          "when": "view == aiBookmarks",
          "group": "navigation@1"
        },
        {
          "command": "aiBookmarks.expandAll",
          "when": "view == aiBookmarks",
          "group": "navigation@2"
        },
        {
          "command": "aiBookmarks.collapseAll",
          "when": "view == aiBookmarks",
          "group": "navigation@3"
        },
        {
          "command": "aiBookmarks.createGroup",
          "when": "view == aiBookmarks",
          "group": "navigation@4"
        },
        {
          "command": "aiBookmarks.refresh",
          "when": "view == aiBookmarks",
          "group": "navigation@5"
        },
        {
          "command": "aiBookmarks.toggleViewMode",
          "when": "view == aiBookmarks",
          "group": "navigation@6"
        },
        {
          "command": "aiBookmarks.exportMarkdown",
          "when": "view == aiBookmarks"
        }
      ],
      "view/item/context": [
        {
          "command": "aiBookmarks.editBookmark",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/",
          "group": "inline"
        },
        {
          "command": "aiBookmarks.openBookmarkDetail",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/",
          "group": "inline"
        },
        {
          "command": "aiBookmarks.addChildBookmark",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/",
          "group": "1_modification"
        },
        {
          "command": "aiBookmarks.checkValidity",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/"
        },
        {
          "command": "aiBookmarks.delete",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/"
        },
        {
          "command": "aiBookmarks.moveBookmarkUp",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/"
        },
        {
          "command": "aiBookmarks.moveBookmarkDown",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/"
        },
        {
          "command": "aiBookmarks.moveBookmark",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/"
        },
        {
          "command": "aiBookmarks.copyBookmarkInfo",
          "when": "view == aiBookmarks && viewItem =~ /^bookmark/"
        },
        {
          "command": "aiBookmarks.renameGroup",
          "when": "view == aiBookmarks && viewItem == group",
          "group": "inline"
        },
        {
          "command": "aiBookmarks.collapseGroup",
          "when": "view == aiBookmarks && viewItem == group",
          "group": "inline"
        },
        {
          "command": "aiBookmarks.expandGroup",
          "when": "view == aiBookmarks && viewItem == group",
          "group": "inline"
        },
        {
          "command": "aiBookmarks.editGroup",
          "when": "view == aiBookmarks && viewItem == group"
        },
        {
          "command": "aiBookmarks.copyGroupInfo",
          "when": "view == aiBookmarks && viewItem == group"
        },
        {
          "command": "aiBookmarks.deleteGroup",
          "when": "view == aiBookmarks && viewItem == group"
        }
      ],
      "editor/context": [
        {
          "command": "aiBookmarks.addManual",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aiBookmarks.addManual",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "editorTextFocus"
      },
      {
        "command": "aiBookmarks.search",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "aiBookmarks.nextBookmark",
        "key": "ctrl+alt+down",
        "mac": "cmd+alt+down",
        "when": "editorTextFocus"
      },
      {
        "command": "aiBookmarks.prevBookmark",
        "key": "ctrl+alt+up",
        "mac": "cmd+alt+up",
        "when": "editorTextFocus"
      },
      {
        "command": "aiBookmarks.renameGroup",
        "key": "f2",
        "when": "view == aiBookmarks && viewItem == group"
      },
      {
        "command": "aiBookmarks.delete",
        "key": "delete",
        "mac": "cmd+backspace",
        "when": "view == aiBookmarks && viewItem =~ /^bookmark/"
      }
    ],
    "configuration": {
      "title": "AI Bookmarks",
      "properties": {
        "aiBookmarks.mcpPort": {
          "type": "number",
          "default": 3333,
          "description": "MCP Server port"
        },
        "aiBookmarks.showInlineDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show bookmark icons in editor gutter"
        },
        "aiBookmarks.viewMode": {
          "type": "string",
          "enum": [
            "group",
            "file"
          ],
          "default": "group",
          "description": "View mode for bookmarks: 'group' (by bookmark group) or 'file' (by file path)"
        },
        "aiBookmarks.quickAddMode": {
          "type": "string",
          "enum": [
            "full",
            "simple"
          ],
          "default": "simple",
          "description": "Quick add bookmark mode: 'full' (complete flow with all options) or 'simple' (only title required)"
        },
        "aiBookmarks.defaultCategory": {
          "type": "string",
          "enum": [
            "entry-point",
            "core-logic",
            "todo",
            "bug",
            "optimization",
            "explanation",
            "warning",
            "reference"
          ],
          "default": "explanation",
          "description": "Default category for new bookmarks"
        },
        "aiBookmarks.confirmBeforeDelete": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before deleting bookmarks or groups"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:mcp && npm run copy:webview",
    "compile:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "compile:mcp": "esbuild ./src/mcp-server-main.ts --bundle --outfile=dist/mcp-server.js --format=cjs --platform=node",
    "copy:webview": "mkdir -p dist/webview && cp -r src/webview/* dist/webview/",
    "watch": "npm run watch:extension & npm run watch:mcp",
    "watch:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "watch:mcp": "esbuild ./src/mcp-server-main.ts --bundle --outfile=dist/mcp-server.js --format=cjs --platform=node --watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@vscode/codicons": "^0.0.44",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
